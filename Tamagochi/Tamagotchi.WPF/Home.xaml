<Page x:Class="Tamagotchi.WPF.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tamagotchi.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid AllowDrop="True">

        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Айтана\source\repos\TeamProject\Tamagochi\Tamagotchi.WPF\Resources\living room.jpg"/>
        </Grid.Background>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Height="500" Margin="0,0,-28,0">
            <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform" Width="400" Height="300">
                <InkCanvas>
                    <Image Source="C:\Users\Айтана\source\repos\TeamProject\Tamagochi\Tamagotchi.WPF\Resources\korgi6.jpg"  Width="400" Height="290" HorizontalAlignment="Center" >
                        <Image.Clip>
                            <RectangleGeometry Rect="26,8,90,134" />
                        </Image.Clip>
                        
                    </Image>
                </InkCanvas>
            </Viewbox>
            <TextBlock Text="Living Room" FontSize="26" />
            
            <Button x:Name="FeedButton" Content="Feed" Width="70" Height="70" Margin="9" Background="PeachPuff" BorderThickness="0" Foreground="BlueViolet" FontSize="19" Click="FeedButton_Click" />
        </StackPanel>
        <Button x:Name="RegisterButton" Content="Register" Cursor="Hand" Background="#003399" Foreground="White" BorderThickness="0" Height="32" HorizontalAlignment="Left" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="RegisterButton_Click" RenderTransformOrigin="0.734,16.656" Margin="544,476,0,0" >
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>
